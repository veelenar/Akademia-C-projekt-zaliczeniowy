<Window x:Class="Task_Manager_CSharp_WPF.AnnouncementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Manager_CSharp_WPF"
        mc:Ignorable="d"
        Title="Announcement" Height="177.311" Width="388.235">
    <Grid>
        <StackPanel>
            <Label Content="One of your tasks is going to meet deadline!" FontWeight="Bold" Margin="20,20,70,0"/>
            <Label Content="Please check your tasklist for further information." Margin="20,0,70,0"/>
            <Button Name="OkButton" Content="OK" Margin="150,30,150,0" Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
